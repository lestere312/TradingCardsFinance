<body>



  <table style="width:100%">
    <tr>
      <th>Quantity</th>
      <th>Card Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Collection</th>
      <th>For Sale</th>
      <th>Delete</th>
    </tr>
    {{#each data}}
      {{> collectionCards}}
    {{/each}}

  </table>
  <form id="addCollection" method="post" action="addCollection">
    <h3>Create New Collection</h3><br>
    <label for="newCollectionName">Collection Name:</label>
    <input type="text" id="newCollectionName" name="newCollectionName">
    <label for="user">Username:</label>
    <select id="user" name="user">
        <option value="">Select User</option>
        {{#each accountsList}}
        <option value="{{this.userID}}">{{this.userName}}</option>
        {{/each}}
    </select>
    <input type="submit" value="Create">
  </form>

  <form class="addCard" method="post" action="addCollectionCard">
    <h3>Add Card</h3><br>
    <label for="Card_Name">Card Name:</label>
    <select id="Card_Name" name="Card_Name">
        <option value="">Select Card</option>
        {{#each cardlist2}}
        <option value="{{this.cardID}}">{{this.cardName}}</option>
        {{/each}}
    </select>
    <label for="Quantity">Quantity:</label>
    <input type="text" id="Quantity" name="Quantity">
    <label for="newCollectionName">Collection:</label>
    <select id="newCollectionName" name="newCollectionName">
        <option value="">Select Collection</option>
        {{#each collectionList}}
        <option value="{{this.collectionID}}">{{this.collectionName}}</option>
        {{/each}}
    </select>
    <input type="submit" value="Submit">

  </form>
  <table style="width:100%">
    <tr>
      <th>Collection Owner:</th>
      <th>Collection:</th>
    </tr>
    {{#each accountsElement}}
      {{> collections}}
    {{/each}}

  </table>
