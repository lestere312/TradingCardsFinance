<body>

  <div class="dropdown">
  <span>Select Collection : {{collectionName.collectionName}}</span>
  <div class="dropdown-content">
    {{#each collectionList}}
    <form class="{{this.collectionName}}" action="Collection">
      {{this.collectionName}}
      <input type = "hidden" name = "collectionName" value = "{{this.collectionID}}" />
      <input type="submit" value="Go"><br>
    </form>
    {{/each}}
    </div>
  </div>
<div class="dropdown">
  <form id="deleteCollection" method="post" action="deleteCollection">
    <input type = "hidden" name = "collectionName" value = "{{collectionName.collectionID}}" />
    <input type="submit" value="Delete Current Collection"><br>
  </form>
</div>


  <table style="width:100%">
    <tr>
      <th>Quantity</th>
      <th>Card Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>For Sale</th>
      <th>Delete</th>
    </tr>
    {{#each data}}
      {{> collectionCards}}
    {{/each}}

  </table>
  <form id="addCollection" method="post" action="addCollection">
    <h3>Create New Collection</h3><br>
    <label for="newCollectionName">Collection Name:</label>
    <input type="text" id="newCollectionName" name="newCollectionName">
    <label for="user">Username:</label>
    <input type="text" id="user" name="user">
    <input type="submit" value="Create">
  </form>

  <form class="addCard" action="Collection">
    <h3>Add Card</h3><br>
    <label for="Card_Name">Card Name:</label>
    <input type="text" id="Card_Name" name="Card_Name">
    <label for="Quantity">Quantity:</label>
    <input type="text" id="Quantity" name="Quantity">
    <input type="submit" value="Submit">
  </form>
  <tr>
    <p style="color:blue">Total collection cost: $180,369.68</p>
  </tr>
